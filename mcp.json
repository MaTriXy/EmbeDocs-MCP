{
  "name": "embedocs-mcp",
  "version": "1.0.0",
  "description": "Transform any GitHub repository into an intelligent knowledge base for AI assistants.",
  "author": "Rom Iluz",
  "license": "MIT",
  "runtime": "node",
  "main": "dist/index.js",
  "repository": "https://github.com/romiluz/embedocs-mcp",
  "homepage": "https://github.com/romiluz/embedocs-mcp#readme",
  "tools": [
    {
      "name": "mongodb-search",
      "description": "Search indexed repositories using semantic search",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Natural language search query"
          },
          "limit": {
            "type": "number",
            "description": "Maximum results to return",
            "default": 5
          },
          "products": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Filter by specific products (e.g., ['manual', 'pymongo'])"
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "mongodb-mmr-search",
      "description": "Advanced search with maximum marginal relevance",
      "parameters": {
        "type": "object",
        "properties": {
          "concept": {
            "type": "string",
            "description": "MongoDB concept to explain"
          },
          "depth": {
            "type": "string",
            "enum": ["beginner", "intermediate", "advanced"],
            "description": "Level of detail",
            "default": "intermediate"
          }
        },
        "required": ["concept"]
      }
    },
    {
      "name": "mongodb-status",
      "description": "Get system and database status",
      "parameters": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "Content to find similar documents for"
          },
          "limit": {
            "type": "number",
            "description": "Maximum results to return",
            "default": 5
          }
        },
        "required": ["content"]
      }
    },
    {
      "parameters": {
        "type": "object",
        "properties": {}
      }
    }
  ],
  "setup": {
    "required_env": [
      "MONGODB_URI",
      "VOYAGE_API_KEY"
    ],
    "setup_command": "embedocs-setup",
    "index_command": "embedocs-index"
  },
  "capabilities": {
    "search": true,
    "semantic": true,
    "vector": true,
    "multilingual": false
  },
  "requirements": {
    "node": ">=18.0.0",
    "mongodb": "Atlas cluster with vector search",
    "voyage": "API key for embeddings"
  }
}
