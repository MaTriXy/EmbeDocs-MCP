#!/usr/bin/env node

// Check for help flag first
if (process.argv.includes('--help') || process.argv.includes('-h')) {
  console.log(`
🚀 EmbeDocs MCP Server v1.0.0 - Universal Repository Embeddings

USAGE:
  embedocs-mcp                 Start the MCP server
  embedocs-mcp --help         Show this help

CONFIGURATION:
  Model: voyage-context-3 (1024 dimensions)
  Search: MongoDB Atlas Vector Search + $rankFusion

ENVIRONMENT VARIABLES:
  MONGODB_URI              MongoDB Atlas connection string
  VOYAGE_API_KEY          Voyage AI API key

For more info: https://github.com/romiluz/embedocs-mcp
`);
  process.exit(0);
}

// Import and run
import('../dist/index.js').catch(error => {
  console.error('❌ Failed to start MCP server:', error.message);
  process.exit(1);
});